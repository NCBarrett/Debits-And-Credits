<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="recipientsFragment"
            type="com.neillbarrett.debitsandcredits.ManageRecipients.RecipientsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/manageRecipients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.neillbarrett.debitsandcredits.ManageRecipients.ManageRecipients"
        tools:layout="@layout/fragment_manage_recipients" >

        <LinearLayout
            android:id="@+id/linLay_Users"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/list_of_recipients"
                android:textAlignment="center"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/userListRecyclerView"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLay_AddUser"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/linLay_Users"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <Button
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/add_recipient"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linLay_AddUser"
/>

            <EditText
                android:id="@+id/et_NewUser"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:autofillHints="Type name here"
                android:inputType="textNoSuggestions" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLay_ChangeUser"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/linLay_AddUser"
            android:layout_margin="50dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <Button
                android:id="@+id/ChangeRecipient_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/change_recipient"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linLay_ChangeUser"
                />

            <EditText
                android:id="@+id/et_ChangeRecipient"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:autofillHints="Select name first"
                android:inputType="textNoSuggestions"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>